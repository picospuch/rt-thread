//--------------------------------------------
//功能：向MAX7219(U3)写入字节
//入口参数：DATA 
//出口参数：无
//说明：
void Write_Max7219_byte(uchar DATA)         
{
  uchar i;    
  rt_pin_write(Max7219_pinCS, PIN_LOW);
  for(i=8;i>=1;i--)
    {
      rt_pin_write(Max7219_pinCLK, PIN_LOW);
      rt_pin_write(Max7219_pinDIN, DATA&0x80);
      DATA=DATA<<1;
      rt_pin_write(Max7219_pinCLK, PIN_HIGH);
    }
}
//-------------------------------------------
//功能：向MAX7219写入数据
//入口参数：address、dat
//出口参数：无
//说明：
void Write_Max7219(uchar address,uchar dat)
{
  rt_pin_write(Max7219_pinCS, PIN_LOW);
  Write_Max7219_byte(address);           //写入地址，即数码管编号
  Write_Max7219_byte(dat);               //写入数据，即数码管显示数字 
  rt_pin_write(Max7219_pinCS, PIN_HIGH);
}

void Init_MAX7219(void)
{
 Write_Max7219(0x09, 0x00);       //译码方式：BCD码
 Write_Max7219(0x0a, 0x03);       //亮度 
 Write_Max7219(0x0b, 0x07);       //扫描界限；8个数码管显示
 Write_Max7219(0x0c, 0x01);       //掉电模式：0，普通模式：1
 Write_Max7219(0x0f, 0x00);       //显示测试：1；测试结束，正常显示：0
}

int main(void)
{
  rt_pin_mode(Max7219_pinCLK, PIN_MODE_OUTPUT);
  rt_pin_mode(Max7219_pinCS, PIN_MODE_OUTPUT);
  rt_pin_mode(Max7219_pinDIN, PIN_MODE_OUTPUT);
  
  rt_thread_mdelay(500);
  
  Init_MAX7219();
  while(1) {
    for(int j=0;j<38;j++)
      {
        for(int i=1;i<9;i++)
          Write_Max7219(i,disp1[j][i-1]);
        rt_thread_mdelay(500);
      }
  }
} 
